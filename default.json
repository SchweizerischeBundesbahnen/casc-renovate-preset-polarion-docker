{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": ["Default Renovate preset for Polarion Docker repos"],
  "extends": [
    "config:recommended",
    ":prNotPending",
    ":semanticCommits",
    ":enablePreCommit"
  ],
  "branchConcurrentLimit": 1,
  "packageRules": [
    {
      "matchManagers": [
        "pre-commit"
      ],
      "automerge": true,
      "automergeType": "branch",
      "ignoreTests": true
    }
  ]
}
